<?xml version="1.0" encoding="UTF-8"?>
<Policy>
    <Name>Comprehensive Immigration Reform</Name>
    <Description>Major overhaul of immigration system with increased restrictions</Description>
    <Category>Political</Category>
    <Origin>Executive Branch</Origin>
    <EnactmentDate>2024-08-01T00:00:00</EnactmentDate>

    <Objectives>
        <Objective>
            <Description>Restrict immigration flows</Description>
            <Priority>1</Priority>
        </Objective>
        <Objective>
            <Description>Enhance border security</Description>
            <Priority>2</Priority>
        </Objective>
    </Objectives>

    <Implementation>
        <Stage>
            <Name>Border Enhancement</Name>
            <StartDate>2024-08-01T00:00:00</StartDate>
            <EndDate>2025-02-01T00:00:00</EndDate>
            <Cost>8000000000</Cost>
            <RequiredResources>
                <Resource>
                    <Name>Border Agents</Name>
                    <Quantity>20000</Quantity>
                </Resource>
            </RequiredResources>
        </Stage>
    </Implementation>

    <Effects>
        <Effect>
            <Type>Social</Type>
            <Description>Increased social tensions</Description>
            <ImpactStrength>8</ImpactStrength>
            <Target>Immigrant Communities</Target>
        </Effect>
        <Effect>
            <Type>Economic</Type>
            <Description>Labor market disruption</Description>
            <ImpactStrength>7</ImpactStrength>
            <Target>Economy</Target>
        </Effect>
    </Effects>

    <Contradictions>
        <Contradiction>
            <Description>Human rights versus border control</Description>
            <Severity>9</Severity>
            <ResolutionPlan>Humanitarian corridors</ResolutionPlan>
        </Contradiction>
    </Contradictions>
</Policy>
