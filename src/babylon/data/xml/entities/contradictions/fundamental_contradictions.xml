<?xml version="1.0" encoding="UTF-8"?>
<Contradictions>
    <!-- Capital vs Labor -->
    <Contradiction>
        <ID>CON001</ID>
        <Name>Capital vs Labor</Name>
        <Description>The fundamental contradiction between capitalist owners and working class over surplus value and means of production</Description>
        <BetweenEntities>
            <Entity>
                <EntityID>C001</EntityID>
                <EntityType>Class</EntityType>
                <Role>Oppressor</Role>
            </Entity>
            <Entity>
                <EntityID>C002</EntityID>
                <EntityType>Class</EntityType>
                <Role>Oppressed</Role>
            </Entity>
        </BetweenEntities>
        <Universality>true</Universality>
        <Particularity>Manifests in wage relations, working conditions, and control over production</Particularity>
        <PrincipalContradiction>true</PrincipalContradiction>
        <PrincipalAspect>C002</PrincipalAspect>
        <Antagonism>Antagonistic</Antagonism>
        <Intensity>High</Intensity>
        <State>Active</State>
        <PotentialForTransformation>true</PotentialForTransformation>
        <ConditionsForTransformation>
            <Condition>Class consciousness development</Condition>
            <Condition>Worker organization</Condition>
            <Condition>Economic crisis</Condition>
        </ConditionsForTransformation>
        <ResolutionMethods>
            <Method>Revolution</Method>
            <Method>Reform</Method>
            <Method>Collective action</Method>
        </ResolutionMethods>
        <ResolutionConditions>
            <Condition>Abolition of private property</Condition>
            <Condition>Democratic control of production</Condition>
        </ResolutionConditions>
        <Effects>
            <Effect>
                <Target>ClassStruggle</Target>
                <Attribute>Intensity</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>0.5</Value>
                <Description>Intensifies class struggle</Description>
            </Effect>
        </Effects>
    </Contradiction>

