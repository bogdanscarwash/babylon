<?xml version="1.0" encoding="UTF-8"?>
<Cultures>
    <Culture>
        <ID>CUL001</ID>
        <Name>Evangelical Christianity</Name>
        <Description>A conservative Protestant Christian movement emphasizing biblical literalism, personal conversion, and evangelical outreach</Description>
        <HistoricalContext>Emerged from Protestant Reformation, gained significant influence in US during Great Awakenings, became major cultural force in 20th century</HistoricalContext>
        
        <CulturalExpressions>
            <Expression>
                <Type>Religious Practice</Type>
                <Name>Mass Evangelism</Name>
                <Description>Large-scale religious gatherings and revival meetings</Description>
                <Influence>High</Influence>
            </Expression>
            <Expression>
                <Type>Media</Type>
                <Name>Christian Broadcasting</Name>
                <Description>Religious television and radio networks</Description>
                <Influence>Medium</Influence>
            </Expression>
        </CulturalExpressions>

        <AssociatedIdeologies>
            <IdeologyID>IDE001</IdeologyID> <!-- Religious Conservatism -->
            <IdeologyID>IDE002</IdeologyID> <!-- Traditional Values -->
        </AssociatedIdeologies>

        <ValuesAndNorms>
            <Value>Biblical authority</Value>
            <Value>Personal salvation</Value>
            <Value>Traditional family structure</Value>
            <Norm>Regular church attendance</Norm>
            <Norm>Public expression of faith</Norm>
            <Norm>Missionary work</Norm>
        </ValuesAndNorms>

        <TraditionsAndCustoms>
            <Tradition>Sunday worship services</Tradition>
            <Tradition>Bible study groups</Tradition>
            <Custom>Prayer before meals</Custom>
            <Custom>Religious holiday celebrations</Custom>
        </TraditionsAndCustoms>

        <Effects>
            <Effect>
                <Target>Society</Target>
                <Attribute>Social Cohesion</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>2.0</Value>
                <Description>Strengthens community bonds among believers</Description>
            </Effect>
            <Effect>
                <Target>Politics</Target>
                <Attribute>Conservative Influence</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>3.0</Value>
                <Description>Promotes conservative social policies</Description>
            </Effect>
        </Effects>

        <ContradictsCultures>
            <CultureID>CUL002</CultureID> <!-- Secular Humanism -->
        </ContradictsCultures>

        <Attributes>
            <Attribute>
                <Name>Religious Intensity</Name>
                <Value>High</Value>
            </Attribute>
            <Attribute>
                <Name>Social Influence</Name>
                <Value>Strong</Value>
            </Attribute>
        </Attributes>
    </Culture>

    <Culture>
        <ID>CUL002</ID>
        <Name>Secular Humanism</Name>
        <Description>A philosophical and cultural movement emphasizing reason, scientific inquiry, and human agency without supernatural beliefs</Description>
        <HistoricalContext>Emerged from Enlightenment thinking, gained prominence in modern era with scientific advancement and declining religious adherence</HistoricalContext>
        
        <CulturalExpressions>
            <Expression>
                <Type>Education</Type>
                <Name>Scientific Education</Name>
                <Description>Emphasis on empirical research and critical thinking</Description>
                <Influence>High</Influence>
            </Expression>
            <Expression>
                <Type>Literature</Type>
                <Name>Rationalist Writing</Name>
                <Description>Books and articles promoting secular worldview</Description>
                <Influence>Medium</Influence>
            </Expression>
        </CulturalExpressions>

        <AssociatedIdeologies>
            <IdeologyID>IDE003</IdeologyID> <!-- Scientific Rationalism -->
            <IdeologyID>IDE004</IdeologyID> <!-- Progressive Liberalism -->
        </AssociatedIdeologies>

        <ValuesAndNorms>
            <Value>Scientific method</Value>
            <Value>Individual autonomy</Value>
            <Value>Universal human rights</Value>
            <Norm>Evidence-based decision making</Norm>
            <Norm>Separation of church and state</Norm>
            <Norm>Cultural pluralism</Norm>
        </ValuesAndNorms>

        <TraditionsAndCustoms>
            <Tradition>Academic conferences</Tradition>
            <Tradition>Public debates</Tradition>
            <Custom>Secular ceremonies</Custom>
            <Custom>Humanist gatherings</Custom>
        </TraditionsAndCustoms>

        <Effects>
            <Effect>
                <Target>Society</Target>
                <Attribute>Scientific Progress</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>3.0</Value>
                <Description>Promotes scientific advancement and research</Description>
            </Effect>
            <Effect>
                <Target>Politics</Target>
                <Attribute>Progressive Influence</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>2.0</Value>
                <Description>Supports secular governance and social reform</Description>
            </Effect>
        </Effects>

        <ContradictsCultures>
            <CultureID>CUL001</CultureID> <!-- Evangelical Christianity -->
        </ContradictsCultures>

        <Attributes>
            <Attribute>
                <Name>Scientific Orientation</Name>
                <Value>High</Value>
            </Attribute>
            <Attribute>
                <Name>Social Influence</Name>
                <Value>Medium</Value>
            </Attribute>
        </Attributes>
    </Culture>
</Cultures>
