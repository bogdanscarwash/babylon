<?xml version="1.0" encoding="UTF-8"?>
<Ideologies>
    <!-- Fascism -->
    <Ideology>
        <ID>IDE001</ID>
        <Name>Fascism</Name>
        <Description>An authoritarian ultranationalist political ideology characterized by dictatorial power, forcible suppression of opposition, and strong regimentation of society and the economy</Description>
        <HistoricalContext>Emerged in early 20th century Europe, particularly in Italy and Germany, as a response to economic instability and the perceived threats of communism and liberal democracy</HistoricalContext>
        <CorePrinciples>
            <Principle>Ultranationalism</Principle>
            <Principle>Totalitarian State Control</Principle>
            <Principle>Social Darwinism</Principle>
            <Principle>Militarism</Principle>
            <Principle>Anti-democracy</Principle>
            <Principle>Cult of Personality</Principle>
        </CorePrinciples>
        <Effects>
            <Effect>
                <Target>Society</Target>
                <Attribute>Social_Cohesion</Attribute>
                <ModificationType>Decrease</ModificationType>
                <Value>-0.8</Value>
                <Description>Severely reduces social cohesion through division and persecution</Description>
            </Effect>
            <Effect>
                <Target>Military</Target>
                <Attribute>Strength</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>0.6</Value>
                <Description>Increases military strength through militarization</Description>
            </Effect>
        </Effects>
        <ContradictsIdeologies>
            <IdeologyID>IDE002</IdeologyID>
            <IdeologyID>IDE003</IdeologyID>
        </ContradictsIdeologies>
        <Influences>
            <CultureID>CUL001</CultureID>
        </Influences>
        <Attributes>
            <Attribute>
                <Name>Authoritarianism_Level</Name>
                <Value>0.9</Value>
            </Attribute>
            <Attribute>
                <Name>Economic_Control</Name>
                <Value>0.8</Value>
            </Attribute>
        </Attributes>
    </Ideology>

    <!-- Communism -->
    <Ideology>
        <ID>IDE002</ID>
        <Name>Communism</Name>
        <Description>A philosophical, social, political, and economic ideology focused on the establishment of a classless, moneyless society based on common ownership of the means of production</Description>
        <HistoricalContext>Developed in the 19th century as a response to industrial capitalism, gained prominence after the Russian Revolution</HistoricalContext>
        <CorePrinciples>
            <Principle>Common Ownership</Principle>
            <Principle>Class Struggle</Principle>
            <Principle>Economic Planning</Principle>
            <Principle>Social Equality</Principle>
            <Principle>Workers' Rights</Principle>
            <Principle>Anti-capitalism</Principle>
        </CorePrinciples>
        <Effects>
            <Effect>
                <Target>Economy</Target>
                <Attribute>Wealth_Distribution</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>0.9</Value>
                <Description>Dramatically increases wealth redistribution</Description>
            </Effect>
            <Effect>
                <Target>Society</Target>
                <Attribute>Class_Consciousness</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>0.8</Value>
                <Description>Heightens class consciousness and solidarity</Description>
            </Effect>
        </Effects>
        <ContradictsIdeologies>
            <IdeologyID>IDE001</IdeologyID>
            <IdeologyID>IDE003</IdeologyID>
        </ContradictsIdeologies>
        <Influences>
            <CultureID>CUL002</CultureID>
        </Influences>
        <Attributes>
            <Attribute>
                <Name>Economic_Equality</Name>
                <Value>0.9</Value>
            </Attribute>
            <Attribute>
                <Name>State_Control</Name>
                <Value>0.7</Value>
            </Attribute>
        </Attributes>
    </Ideology>

    <!-- Liberalism -->
    <Ideology>
        <ID>IDE003</ID>
        <Name>Liberalism</Name>
        <Description>A political and moral philosophy based on liberty, consent of the governed, and equality before the law</Description>
        <HistoricalContext>Emerged during the Age of Enlightenment, shaped modern democratic societies and market economies</HistoricalContext>
        <CorePrinciples>
            <Principle>Individual Rights</Principle>
            <Principle>Free Market Economy</Principle>
            <Principle>Democracy</Principle>
            <Principle>Rule of Law</Principle>
            <Principle>Limited Government</Principle>
            <Principle>Personal Freedom</Principle>
        </CorePrinciples>
        <Effects>
            <Effect>
                <Target>Economy</Target>
                <Attribute>Market_Freedom</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>0.7</Value>
                <Description>Promotes free market operations</Description>
            </Effect>
            <Effect>
                <Target>Society</Target>
                <Attribute>Individual_Rights</Attribute>
                <ModificationType>Increase</ModificationType>
                <Value>0.6</Value>
                <Description>Enhances protection of individual rights</Description>
            </Effect>
        </Effects>
        <ContradictsIdeologies>
            <IdeologyID>IDE002</IdeologyID>
        </ContradictsIdeologies>
        <Influences>
            <CultureID>CUL002</CultureID>
        </Influences>
        <Attributes>
            <Attribute>
                <Name>Economic_Freedom</Name>
                <Value>0.8</Value>
            </Attribute>
            <Attribute>
                <Name>Individual_Liberty</Name>
                <Value>0.9</Value>
            </Attribute>
        </Attributes>
    </Ideology>
</Ideologies>
