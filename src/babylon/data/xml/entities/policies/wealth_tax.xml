<?xml version="1.0" encoding="UTF-8"?>
<Policy>
    <Name>Progressive Wealth Tax Initiative</Name>
    <Description>Implementation of substantial wealth tax on ultra-high net worth individuals</Description>
    <Category>Economic</Category>
    <Origin>Progressive Congressional Caucus</Origin>
    <EnactmentDate>2024-09-01T00:00:00</EnactmentDate>

    <Objectives>
        <Objective>
            <Description>Reduce wealth inequality</Description>
            <Priority>1</Priority>
        </Objective>
        <Objective>
            <Description>Fund social programs</Description>
            <Priority>2</Priority>
        </Objective>
    </Objectives>

    <Implementation>
        <Stage>
            <Name>Tax Collection Framework</Name>
            <StartDate>2024-09-01T00:00:00</StartDate>
            <EndDate>2025-01-01T00:00:00</EndDate>
            <Cost>200000000</Cost>
            <RequiredResources>
                <Resource>
                    <Name>Financial Auditors</Name>
                    <Quantity>5000</Quantity>
                </Resource>
            </RequiredResources>
        </Stage>
    </Implementation>

    <Effects>
        <Effect>
            <Type>Economic</Type>
            <Description>Significant wealth redistribution</Description>
            <ImpactStrength>9</ImpactStrength>
            <Target>Economic System</Target>
        </Effect>
        <Effect>
            <Type>Political</Type>
            <Description>Increased class conflict</Description>
            <ImpactStrength>8</ImpactStrength>
            <Target>Social Classes</Target>
        </Effect>
    </Effects>

    <Contradictions>
        <Contradiction>
            <Description>Capital flight versus social welfare</Description>
            <Severity>8</Severity>
            <ResolutionPlan>International cooperation on tax enforcement</ResolutionPlan>
        </Contradiction>
    </Contradictions>
</Policy>
