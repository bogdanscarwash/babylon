<?xml version="1.0" encoding="UTF-8"?>
<PoliticalSystems>
  <!-- Democratic Republic -->
  <PoliticalSystem>
    <!-- Basic Information -->
    <ID>PS001</ID>
    <Name>Democratic Republic</Name>
    <Description>A political system where power is vested in the people, who exercise it directly or through elected representatives.</Description>
    <HistoricalContext>Established after the revolution that overthrew the monarchy.</HistoricalContext>
    
    <!-- Government Structure -->
    <GovernmentType>Democracy</GovernmentType>
    <BranchesOfGovernment>
      <Branch>
        <Name>Executive</Name>
        <Description>Enforces laws and oversees government operations.</Description>
        <Powers>
          <Power>Enforce Laws</Power>
          <Power>Veto Legislation</Power>
        </Powers>
      </Branch>
      <Branch>
        <Name>Legislative</Name>
        <Description>Makes laws and represents the electorate.</Description>
        <Powers>
          <Power>Create Laws</Power>
          <Power>Approve Budget</Power>
        </Powers>
      </Branch>
      <Branch>
        <Name>Judicial</Name>
        <Description>Interprets laws and administers justice.</Description>
        <Powers>
          <Power>Interpret Laws</Power>
          <Power>Judicial Review</Power>
        </Powers>
      </Branch>
    </BranchesOfGovernment>
    
    <!-- Leadership -->
    <LeadershipSelectionMethod>Elections</LeadershipSelectionMethod>
    <CurrentLeaders>
      <Leader>
        <CharacterID>Char002</CharacterID> <!-- President John Smith -->
        <Title>President</Title>
        <TermDuration>4</TermDuration>
        <TermLimit>2</TermLimit>
      </Leader>
    </CurrentLeaders>
    
    <!-- Associated Ideologies -->
    <AssociatedIdeologies>
      <IdeologyID>I003</IdeologyID> <!-- Democracy Ideology -->
    </AssociatedIdeologies>
    
    <!-- Political Parties and Factions -->
    <PoliticalParties>
      <Party>
        <FactionID>F005</FactionID> <!-- Progressive Party -->
        <Name>Progressive Party</Name>
        <IdeologyID>I003</IdeologyID>
        <Popularity>0.45</Popularity> <!-- 45% support -->
        <Influence>High</Influence>
      </Party>
      <Party>
        <FactionID>F006</FactionID> <!-- Conservative Party -->
        <Name>Conservative Party</Name>
        <IdeologyID>I001</IdeologyID> <!-- Capitalism -->
        <Popularity>0.40</Popularity> <!-- 40% support -->
        <Influence>Medium</Influence>
      </Party>
    </PoliticalParties>
    
    <!-- Laws and Policies -->
    <Laws>
      <LawID>Law001</LawID> <!-- Freedom of Speech Act -->
      <LawID>Law004</LawID> <!-- Universal Suffrage Act -->
    </Laws>
    <Policies>
      <Policy>
        <ID>Policy001</ID>
        <Name>Healthcare Reform</Name>
        <Description>Implementing universal healthcare for all citizens.</Description>
        <ImplementedBy>Legislative</ImplementedBy>
        <Effects>
          <Effect>
            <Target>Population</Target>
            <Attribute>Health</Attribute>
            <ModificationType>Increase</ModificationType>
            <Value>0.10</Value> <!-- Increases health by 10% -->
            <Description>Improves overall population health.</Description>
          </Effect>
        </Effects>
      </Policy>
    </Policies>
    
    <!-- Political Processes -->
    <PoliticalProcesses>
      <Process>
        <Name>Elections</Name>
        <Description>Citizens vote to elect representatives.</Description>
        <Participants>
          <ParticipantType>Citizens</ParticipantType>
        </Participants>
        <Frequency>Every 4 years</Frequency>
      </Process>
      <Process>
        <Name>Legislation</Name>
        <Description>Process of creating and passing laws.</Description>
        <Participants>
          <ParticipantType>Representatives</ParticipantType>
        </Participants>
        <Frequency>Continuous</Frequency>
      </Process>
    </PoliticalProcesses>
    
    <!-- Effects on Game Elements -->
    <Effects>
      <Effect>
        <Target>SocialClasses</Target>
        <Attribute>PoliticalParticipation</Attribute>
        <ModificationType>Increase</ModificationType>
        <Value>0.20</Value> <!-- Increases participation by 20% -->
        <Description>Encourages political engagement among citizens.</Description>
      </Effect>
    </Effects>
    
    <!-- Attributes -->
    <Attributes>
      <Attribute>
        <Name>Stability</Name>
        <Value>High</Value>
      </Attribute>
      <Attribute>
        <Name>CorruptionLevel</Name>
        <Value>Low</Value>
      </Attribute>
    </Attributes>
  </PoliticalSystem>
  
  <!-- Totalitarian Regime -->
  <PoliticalSystem>
    <!-- Basic Information -->
    <ID>PS002</ID>
    <Name>Totalitarian Regime</Name>
    <Description>A centralized government that does not tolerate parties of differing opinion and exercises dictatorial control over many aspects of life.</Description>
    <HistoricalContext>Established after a military coup that overthrew the previous government.</HistoricalContext>
    
    <!-- Government Structure -->
    <GovernmentType>Autocracy</GovernmentType>
    <BranchesOfGovernment>
      <Branch>
        <Name>Supreme Leader</Name>
        <Description>Holds absolute power over the state.</Description>
        <Powers>
          <Power>Enforce Laws</Power>
          <Power>Create Laws</Power>
          <Power>Command Military</Power>
        </Powers>
      </Branch>
    </BranchesOfGovernment>
    
    <!-- Leadership -->
    <LeadershipSelectionMethod>Appointment</LeadershipSelectionMethod>
    <CurrentLeaders>
      <Leader>
        <CharacterID>Char003</CharacterID> <!-- General Augustus Black -->
        <Title>Supreme Leader</Title>
      </Leader>
    </CurrentLeaders>
    
    <!-- Associated Ideologies -->
    <AssociatedIdeologies>
      <IdeologyID>I004</IdeologyID> <!-- Fascism -->
    </AssociatedIdeologies>
    
    <!-- Political Parties and Factions -->
    <PoliticalParties>
      <Party>
        <FactionID>F004</FactionID> <!-- National Unity Party -->
        <Name>National Unity Party</Name>
        <IdeologyID>I004</IdeologyID>
        <Popularity>0.80</Popularity> <!-- 80% support (due to suppression of opposition) -->
        <Influence>Dominant</Influence>
      </Party>
    </PoliticalParties>
    
    <!-- Laws and Policies -->
    <Laws>
      <LawID>Law003</LawID> <!-- National Security Law -->
    </Laws>
    <Policies>
      <Policy>
        <ID>Policy002</ID>
        <Name>Media Censorship</Name>
        <Description>Strict control over all forms of media.</Description>
        <ImplementedBy>Supreme Leader</ImplementedBy>
        <Effects>
          <Effect>
            <Target>Population</Target>
            <Attribute>FreedomOfExpression</Attribute>
            <ModificationType>Decrease</ModificationType>
            <Value>0.50</Value> <!-- Decreases freedom by 50% -->
            <Description>Limits the spread of dissenting ideas.</Description>
          </Effect>
        </Effects>
      </Policy>
    </Policies>
    
    <!-- Political Processes -->
    <PoliticalProcesses>
      <Process>
        <Name>Decrees</Name>
        <Description>Laws and policies are enacted by the Supreme Leader without consultation.</Description>
        <Participants>
          <ParticipantType>Supreme Leader</ParticipantType>
        </Participants>
        <Frequency>As Needed</Frequency>
      </Process>
    </PoliticalProcesses>
    
    <!-- Effects on Game Elements -->
    <Effects>
      <Effect>
        <Target>Factions</Target>
        <Attribute>OppositionStrength</Attribute>
        <ModificationType>Decrease</ModificationType>
        <Value>0.30</Value> <!-- Reduces opposition strength by 30% -->
        <Description>Suppresses opposing factions.</Description>
      </Effect>
    </Effects>
    
    <!-- Attributes -->
    <Attributes>
      <Attribute>
        <Name>Stability</Name>
        <Value>Low</Value>
      </Attribute>
      <Attribute>
        <Name>CorruptionLevel</Name>
        <Value>High</Value>
      </Attribute>
    </Attributes>
  </PoliticalSystem>

</PoliticalSystems>