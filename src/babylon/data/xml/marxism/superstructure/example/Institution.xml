<?xml version="1.0" encoding="UTF-8"?>
<Institutions>
  <!-- The Supreme Court -->
  <Institution>
    <!-- Basic Information -->
    <ID>Inst001</ID>
    <Name>Supreme Court</Name>
    <Type>Legal</Type>
    <Description>The highest judicial body responsible for interpreting the constitution and overseeing the judicial system.</Description>
    <HistoricalContext>Established after the adoption of the new constitution.</HistoricalContext>

    <!-- Functions and Roles -->
    <Functions>
      <Function>Interpret Laws</Function>
      <Function>Judicial Review</Function>
    </Functions>
    <Roles>
      <Role>
        <Title>Chief Justice</Title>
        <CharacterID>Char004</CharacterID> <!-- Justice Emily Davis -->
        <Responsibilities>
          <Responsibility>Preside over court sessions</Responsibility>
          <Responsibility>Lead judicial deliberations</Responsibility>
        </Responsibilities>
      </Role>
      <Role>
        <Title>Associate Justice</Title>
        <CharacterID>Char005</CharacterID> <!-- Justice Robert Lee -->
      </Role>
    </Roles>

    <!-- Associated Ideologies -->
    <AssociatedIdeologies>
      <IdeologyID>I003</IdeologyID> <!-- Democracy Ideology -->
    </AssociatedIdeologies>

    <!-- Controlled By Classes or Factions -->
    <ControlledBy>
      <ClassID>C002</ClassID> <!-- Bourgeoisie -->
    </ControlledBy>

    <!-- Influence on Game Elements -->
    <Effects>
      <Effect>
        <Target>Laws</Target>
        <Attribute>Legitimacy</Attribute>
        <ModificationType>Increase</ModificationType>
        <Value>0.25</Value> <!-- Increases legitimacy by 25% -->
        <Description>Enhances the legitimacy of laws through judicial endorsement.</Description>
      </Effect>
    </Effects>

    <!-- Laws and Policies -->
    <EnactedLaws>
      <LawID>Law001</LawID> <!-- Property Rights Law -->
      <LawID>Law005</LawID> <!-- Anti-Discrimination Act -->
    </EnactedLaws>

    <!-- Relationships with Other Institutions -->
    <Relationships>
      <Relationship>
        <InstitutionID>Inst002</InstitutionID> <!-- Parliament -->
        <RelationshipType>Checks and Balances</RelationshipType>
        <Description>Can declare laws unconstitutional.</Description>
      </Relationship>
    </Relationships>

    <!-- Attributes -->
    <Attributes>
      <Attribute>
        <Name>Independence</Name>
        <Value>High</Value>
      </Attribute>
    </Attributes>
  </Institution>

  <!-- National Education Board -->
  <Institution>
    <!-- Basic Information -->
    <ID>Inst004</ID>
    <Name>National Education Board</Name>
    <Type>Educational</Type>
    <Description>Responsible for overseeing education policies and curriculum standards nationwide.</Description>

    <!-- Functions and Roles -->
    <Functions>
      <Function>Set Educational Standards</Function>
      <Function>Develop Curriculum</Function>
      <Function>Teacher Certification</Function>
    </Functions>
    <Roles>
      <Role>
        <Title>Director of Education</Title>
        <CharacterID>Char006</CharacterID> <!-- Dr. Sophia Martinez -->
      </Role>
    </Roles>

    <!-- Associated Ideologies -->
    <AssociatedIdeologies>
      <IdeologyID>I001</IdeologyID> <!-- Capitalism -->
    </AssociatedIdeologies>

    <!-- Controlled By Classes or Factions -->
    <ControlledBy>
      <FactionID>F002</FactionID> <!-- Corporate Elites -->
    </ControlledBy>

    <!-- Influence on Game Elements -->
    <Effects>
      <Effect>
        <Target>Population</Target>
        <Attribute>EducationLevel</Attribute>
        <ModificationType>Increase</ModificationType>
        <Value>0.20</Value> <!-- Increases education level by 20% -->
        <Description>Improves the general education of the populace.</Description>
      </Effect>
      <Effect>
        <Target>Ideology</Target>
        <Attribute>Acceptance</Attribute>
        <ModificationType>Increase</ModificationType>
        <Value>0.15</Value>
        <Description>Promotes the dominant ideology through curriculum.</Description>
      </Effect>
    </Effects>

    <!-- Policies -->
    <Policies>
      <Policy>
        <ID>Policy003</ID>
        <Name>Standardized Testing Initiative</Name>
        <Description>Implements nationwide standardized tests to measure student performance.</Description>
        <Effects>
          <Effect>
            <Target>EducationalInstitutions</Target>
            <Attribute>PerformancePressure</Attribute>
            <ModificationType>Increase</ModificationType>
            <Value>0.10</Value>
            <Description>Increases pressure on schools to perform.</Description>
          </Effect>
        </Effects>
      </Policy>
    </Policies>

    <!-- Relationships with Other Institutions -->
    <Relationships>
      <Relationship>
        <InstitutionID>Inst005</InstitutionID> <!-- Teachers' Union -->
        <RelationshipType>Adversarial</RelationshipType>
        <Description>Conflict over educational reforms and teacher compensation.</Description>
      </Relationship>
    </Relationships>

    <!-- Attributes -->
    <Attributes>
      <Attribute>
        <Name>Funding</Name>
        <Value>Ample</Value>
      </Attribute>
    </Attributes>
  </Institution>

  <!-- Workers' Union -->
  <Institution>
    <!-- Basic Information -->
    <ID>Inst006</ID>
    <Name>Workers' Union</Name>
    <Type>Labor</Type>
    <Description>An organization representing the interests of workers, advocating for better wages and working conditions.</Description>

    <!-- Functions and Roles -->
    <Functions>
      <Function>Collective Bargaining</Function>
      <Function>Worker Advocacy</Function>
      <Function>Strike Organization</Function>
    </Functions>
    <Roles>
      <Role>
        <Title>Union Leader</Title>
        <CharacterID>Char007</CharacterID> <!-- Alex Kim -->
        <Responsibilities>
          <Responsibility>Lead negotiations</Responsibility>
          <Responsibility>Organize member activities</Responsibility>
        </Responsibilities>
      </Role>
    </Roles>

    <!-- Associated Ideologies -->
    <AssociatedIdeologies>
      <IdeologyID>I002</IdeologyID> <!-- Communism -->
    </AssociatedIdeologies>

    <!-- Controlled By Classes or Factions -->
    <ControlledBy>
      <ClassID>C001</ClassID> <!-- Proletariat -->
    </ControlledBy>

    <!-- Influence on Game Elements -->
    <Effects>
      <Effect>
        <Target>MeansOfProduction</Target>
        <Attribute>LaborCosts</Attribute>
        <ModificationType>Increase</ModificationType>
        <Value>0.10</Value> <!-- Increases labor costs by 10% -->
        <Description>Secures higher wages for workers.</Description>
      </Effect>
      <Effect>
        <Target>SocialClasses</Target>
        <Attribute>ClassConsciousness</Attribute>
        <ModificationType>Increase</ModificationType>
        <Value>0.15</Value>
        <Description>Raises awareness among workers of their class interests.</Description>
      </Effect>
    </Effects>

    <!-- Policies -->
    <Policies>
      <Policy>
        <ID>Policy004</ID>
        <Name>Collective Bargaining Agreement</Name>
        <Description>Establishes terms of employment, wages, and benefits.</Description>
        <Effects>
          <Effect>
            <Target>Population</Target>
            <Attribute>WorkerSatisfaction</Attribute>
            <ModificationType>Increase</ModificationType>
            <Value>0.20</Value> <!-- Increases satisfaction by 20% -->
            <Description>Improves morale among workers.</Description>
          </Effect>
        </Effects>
      </Policy>
    </Policies>

    <!-- Relationships with Other Institutions -->
    <Relationships>
      <Relationship>
        <InstitutionID>Inst007</InstitutionID> <!-- Factory Owners' Association -->
        <RelationshipType>Adversarial</RelationshipType>
        <Description>Opposing interests in labor negotiations.</Description>
      </Relationship>
    </Relationships>

    <!-- Attributes -->
    <Attributes>
      <Attribute>
        <Name>MembershipSize</Name>
        <Value>Large</Value>
      </Attribute>
    </Attributes>
  </Institution>

</Institutions>